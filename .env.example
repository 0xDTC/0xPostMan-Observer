# Postman Observer Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to git!

# ============================================
# Postman API Configuration
# ============================================
# Get your API key from: https://postman.com → Settings → API Keys
POSTMAN_API_KEY=PMAK-your-api-key-here

# ============================================
# Email Configuration (Optional)
# ============================================
# Leave blank to disable email alerts (logs only mode)

# SMTP Server (e.g., smtp.gmail.com, email-smtp.us-east-1.amazonaws.com)
SMTP_HOST=smtp.gmail.com

# SMTP Port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# Sender Email Address
SMTP_FROM=your-email@gmail.com

# SMTP Password or App Password
# For Gmail: Generate at https://myaccount.google.com/apppasswords
# For AWS SES: Use SMTP credentials
SMTP_PASSWORD=your-app-password-here

# Alert Recipients (comma-separated)
SMTP_TO=security@example.com,admin@example.com

# ============================================
# Monitoring Configuration
# ============================================
# How often to check (in hours)
MONITOR_INTERVAL_HOURS=24

# Enable deep scanning of collection contents
DEEP_SCAN_ENABLED=true

# Enable active secret verification (test if secrets work)
VERIFY_SECRETS=true

# ============================================
# Keywords Configuration
# ============================================
# Keywords to monitor (comma-separated)
# These will trigger alerts when found in public collections
MONITOR_KEYWORDS=MTF,monotype,extensis,connect.extensis,enterprise.monotype.com,MFP,monotype foundry,Foundry platform

# Keywords to ignore (comma-separated)
# Collections matching these will be skipped
IGNORE_KEYWORDS=example,demo,test,sample,tutorial

# ============================================
# Logging Configuration
# ============================================
# Directory for log files
LOG_DIR=logs

# ============================================
# Example Configurations
# ============================================

# Minimal (Postman API key only, no email)
# POSTMAN_API_KEY=PMAK-xxx
# SMTP_HOST=
# MONITOR_KEYWORDS=mycompany,api-key

# Gmail Example
# POSTMAN_API_KEY=PMAK-xxx
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_FROM=alerts@gmail.com
# SMTP_PASSWORD=abcd efgh ijkl mnop
# SMTP_TO=security@company.com

# AWS SES Example
# POSTMAN_API_KEY=PMAK-xxx
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_FROM=verified@yourdomain.com
# SMTP_PASSWORD=YOUR_SES_SMTP_PASSWORD
# SMTP_TO=security@yourdomain.com,devops@yourdomain.com